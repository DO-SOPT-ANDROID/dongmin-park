<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_main_user"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:src="@drawable/iv_profile"
        android:layout_marginTop="60dp"
        android:layout_marginStart="30dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_main_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:minHeight="12dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_main_user"
        app:layout_constraintStart_toEndOf="@id/iv_main_user"
        app:layout_constraintTop_toTopOf="@id/iv_main_user" />

    <TextView
        android:id="@+id/tv_main_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:minHeight="12dp"
        android:textColor="#A6A6A6"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_main_nickname"
        app:layout_constraintStart_toEndOf="@id/tv_main_nickname"
        app:layout_constraintTop_toTopOf="@id/tv_main_nickname" />


    <TextView
        android:id="@+id/tv_main_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/tv_main_id_title"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/iv_main_user"
        app:layout_constraintTop_toBottomOf="@id/iv_main_user" />

    <TextView
        android:id="@+id/tv_main_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="12dp"
        android:textColor="#A6A6A6"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_main_id_title"
        app:layout_constraintTop_toBottomOf="@id/tv_main_id_title" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_my_page_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_logout_white_24" />


</androidx.constraintlayout.widget.ConstraintLayout>